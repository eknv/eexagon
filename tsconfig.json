{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "**/*": ["**/*.web"],
      "Common/*": ["common/*"],
      "X/*": ["common/components/*"],
      "S/*": ["common/screens/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "types": ["jest"],
    "lib": ["esnext"]
  },
  "include": [
    "mobile",
    "common",
    "ambient.d.ts"
  ]
}
