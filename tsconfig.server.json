{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "Enum/*": ["common/enum/*"],
      "Common": ["common/*"]
    },
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext", "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "server",
    "common"
  ]
}
